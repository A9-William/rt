
sub acl {
    my $dbh = shift;

    my @acls;

    my @tables = qw (
FM_Classes_id_seq
FM_Classes 
FM_Articles_id_seq 
FM_Articles 
FM_Topics_id_seq
FM_Topics
FM_ObjectTopics_id_seq
FM_ObjectTopics

    );

    foreach my $table (@tables) {
        push @acls,
          "GRANT SELECT, INSERT, UPDATE, DELETE ON $table to "
          . $RT::DatabaseUser . ";";

    }
    return (@acls);
}
1;


