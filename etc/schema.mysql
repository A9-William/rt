# {{{ FM_Content
CREATE TABLE FM_Content (
  id INTEGER NOT NULL  AUTO_INCREMENT,


  Summary varchar(255) NULL  ,


  Parent integer NULL  ,
  Filename varchar(255) NULL  ,

  ContentType varchar(80) NULL  ,
  ContentEncoding varchar(80) NULL  ,
  MessageId varchar(160) NULL  ,
