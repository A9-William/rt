#!/usr/bin/perl -w
use strict;
use warnings;

use lib 'lib';
use RT;
RT::LoadConfig();
RT::Init();

use RT::Serializer;
my $walker = RT::Serializer->new();

my $queues = RT::Queues->new( RT->SystemUser );
$queues->UnLimit;
$walker->PushObj( $queues );

my %counts = $walker->Walk;

print "Total object counts:\n";
for (sort {$counts{$b} <=> $counts{$a}} keys %counts) {
    printf "%8d %s\n", $counts{$_}, $_;
}
