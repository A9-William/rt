%# $Header$

<SELECT NAME ="<%$Name%>">
<OPTION VALUE="1" <%$TrueDefault%>><%$True%></OPTION>
<OPTION VALUE="0" <%$FalseDefault%>><%$False%></OPTION>
</SELECT>

<%ARGS>
$Name => undef
$True => undef
$False => undef
$Default => undef
$TrueDefault => undef
$FalseDefault => undef
</%ARGS>

<%INIT>
if ($Default !~ /true/i) {
	$FalseDefault = "SELECTED";
}
else {
	$TrueDefault = "SELECTED";
}
</%INIT>