<SELECT NAME ="<%$Name%>">
<OPTION VALUE="none">-</OPTION>
%# Make nice options:
%for my $option (@types) {
<OPTION VALUE="<%$option%>" <%$option eq $Default && "SELECTED"%>><%$option%></OPTION>
%}
</SELECT>

<%ONCE>
my @types = qw(Requestor Cc AdminCc);
</%ONCE>
<%ARGS>
$Default=>undef
$Name => 'WatcherType'
</%ARGS>
