<%init>
my ($DefDate, $DefTime);
if ($current > 0) {
	my ($sec,$min,$hour,$mday,$mon,$year,$wday,$yday,$isdst) =
                                            gmtime($current);
	$mon++;
	$year+=1900;

	$DefDate = "$year-$mon-$mday";
	
	$min = sprintf("%#2u",$min);
	$DefTime = " $hour:$min";
}
else {
	$DefDate ="";
	$DefTime ="";
}
</%init>

<%args>

$ShowTime => undef
$menu_prefix=>''
$current=>time
</%args>
