<INPUT NAME="<%$menu_prefix%>_Date" VALUE="<%$DefDate%>" size=10> <font size =-2>(ex 2000-08-21 or 8-21)</font>
<SELECT NAME="<%$menu_prefix%>_DateSelect">
<OPTION VALUE="-365">1 year ago</option>
<OPTION VALUE="-90">90 days ago</OPTION>
<OPTION VALUE="-60">60 days ago</OPTION>
<OPTION VALUE="-30">30 days ago</OPTION>
<OPTION VALUE="-14">14 days ago</OPTION>
<OPTION VALUE="-7">7 days ago</OPTION>
<OPTION VALUE="-1">1 day ago</OPTION>
<OPTION VALUE="" SELECTED>-</OPTION>
<OPTION>in 1 day</OPTION>
<OPTION>in 7 days</OPTION>
<OPTION>in 14 days</OPTION>
<OPTION>in 30 days</OPTION>
<OPTION>in 60 days</OPTION>
<OPTION>in 90 days</OPTION>
<OPTION>in 1 year</OPTION>
</SELECT>
at <INPUT NAME="<%$menu_prefix%>_Time" VALUE="<%$DefTime%>" size=6><font size=-2>(ex 21:34 or 9:34 PM)</font>
<FONT COLOR=#FF0000">Note: all times are currently GMT</FONT>
<%init>
my ($DefDate, $DefTime);
if ($current > 0) {
	my ($sec,$min,$hour,$mday,$mon,$year,$wday,$yday,$isdst) =
                                            gmtime($current);
	$mon++;
	$year+=1900;

	$DefDate = "$year-$mon-$mday";
	
	$min = sprintf("%2u",$min);
	$DefTime = "$hour:$min";
}
else {
	$DefDate ="";
	$DefTime ="";
}
</%init>

<%args>


$menu_prefix=>''
$current=>time
</%args>
