<%INIT>
my ($tab, $action);
my $toptabs = {    A => { title => 'Home',
                           path => '',
                         },
                    B => { title => 'Search',
                        path => 'Search/Listing.html'
                      },

                    D => { title => 'Administration',
                           path => 'Admin/'
                         }
                 };
                    

my $topactions = {
	A => { html => $m->scomp('/Elements/CreateTicket')	
		},
	B => { html => $m->scomp('/Elements/GotoTicket') 
		}
	};
</%INIT>
<%ARGS>
$current_toptab =>  "none"
$current_tab => "none"
$current_subtab => "none"
$tabs => undef
$subtabs => undef
$actions => undef
