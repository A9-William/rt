<TABLE cellspacing=1>
<TR>
% foreach $tab (sort keys %{$toptabs}) {
<TD ALIGN=CENTER>
<font size=+1>
% if ($current_toptab eq $toptabs->{$tab}->{'path'}) {
[<% $toptabs->{$tab}->{'title'}%>]
% } else {
[<A HREF="<%$RT::WebPath%>/<% $toptabs->{$tab}->{'path'}%>"><% $toptabs->{$tab}->{'title'}%></A>]

% }
</font>
</TD>
% }
</TR>
</TABLE>

<BR>

% if ($tabs) {
<TABLE>	
<TR>
% foreach $tab (sort keys %{$tabs}) {
<TD ALIGN=CENTER>
% if ($current_tab eq $tabs->{$tab}->{'path'}) {
[<% $tabs->{$tab}->{'title'}%>]
% } else {
[<A HREF="<%$RT::WebPath%>/<% $tabs->{$tab}->{'path'}%>"><% $tabs->{$tab}->{'title'}%></A>]
</TD>
%}
%}
</TR>
</TABLE>
%}

<BR>
% if ($subtabs) {
<TABLE>	
<TR>
% foreach $tab (sort keys %{$subtabs}) {
<TD ALIGN=CENTER>
[<A HREF="<%$RT::WebPath%>/<% $subtabs->{$tab}->{'path'}%>"><% $subtabs->{$tab}->{'title'}%></A>]
</TD>
%}
</TR>
</TABLE>
%}

<%INIT>
my ($tab);
my $toptabs = {    A => { title => 'Home',
                           path => '',
                         },
                    B => { title => 'Search',
                        path => 'Search/Listing.html'
                      },
                    C => { title => 'New Ticket',
                           path => 'Ticket/Create.html'
                      },
                    D => { title => 'Administration',
                           path => 'Admin/'
                         }
                 };
                    
</%INIT>
<%ARGS>
$current_toptab =>  "none"
$current_tab => "none"
$current_subtab => "none"
$tabs => undef
$subtabs => undef
</%ARGS>

