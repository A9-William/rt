<SELECT NAME="<%$Name%>">
% foreach my $field (@sortfields) {
<OPTION VALUE="<%$field%>" <%$field eq $Default && 'SELECTED'%>><%$field%></OPTION>
% }
</SELECT>

<%INIT>
my @sortfields = qw(id Status Owner Created Due Starts Started
		    Resolved LastUpdate Priority TimeWorked TimeLeft);
</%INIT>
<%ARGS>
$Name => 'SortTicketsBy'
$Default => 'id'
</%ARGS>
