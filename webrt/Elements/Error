<HTML>
<HEAD>
% if ($Code) {
<META NAME="HTTP-EQUIV" VALUE="<%$Code%> <%$Why%>">
% }
<TITLE>
<% $Title %>
</TITLE>
<BODY BGCOLOR=WHITE>
<& /Elements/TitleBoxStart, title => $Title &>

RT ran into an error:
<br><%$Why%>
<br>
<font size=-1>
<%$Details%>
</font>
<& /Elements/TitleBoxEnd &>
</body>
</HTML>
<%args>
$Code => undef
$Details => "(No details given)"
$Title => "RT Error"
$Why => "the calling component did not specify why"
</%args>
<%INIT>
$RT::Logger->log(message=>"WebRT: $Why ($Details)", level=>"error");
</%INIT>
