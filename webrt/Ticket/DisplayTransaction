<pre>
<%$message->Headers%>
</pre>

%   if ($message->ContentType =~ m{^(text/plain|message)}) {
<pre>
<%$message->Content%>
</pre>
%    } 
% else {
	
<% $message->ContentType %> not shown
%    }

% }