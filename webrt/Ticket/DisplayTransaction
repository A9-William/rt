<%ARGS>
$Transaction => undef
$attachments => $Transaction->Attachments

</%ARGS>

Date: <%$Transaction->CreatedAsString%> 

% if ($Transaction->TimeTaken > 0) {
(<%$Transaction->TimeTaken%> minutes)
% }
<%$Transaction->Description%>


