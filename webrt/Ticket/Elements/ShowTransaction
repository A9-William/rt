% }
<%PERL>
my $size = length($message->Content());

if ($size) {

if ($size > 1024) {
	$size = int($size/102.4)/10 . "k";
}
else {
	$size = $size ."b";
}
</%PERL>
<A HREF="Attachment/<%$Transaction->Id%>/<%$message->Id%>/<%$message->Filename%>">Download <%$message->Filename%></a> <% $size %><br>
% }
</TD>
</TR>
