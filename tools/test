#!/bin/sh

# Be sure that you have the RT binaries in the path before starting this test script.

# Create a new request (ok, this syntax is downright ugly ... we
# should consider making a better cli, but it's not prioritied anyway)
id=`echo -e "general\n\n\n\n\ntobiasb@funcom.com\ntobiasb@funcom.com\n\nblah test\naafaefwfwfe\n" | rt -create | perl -nle 'print $1 if (/^Request (\d+) created$/);'`

echo -e "testsubj\ntobiasb@funcom.com\ntobix@tobiasb.funcom.com\naaaaghagaah\n.\n2\n" | rt -comment $id

rt -resolve $id

rt -kill $id

id2=`echo -e "general\n\n\n\n\ntobiasb@funcom.com\ntobiasb@funcom.com\n\nblbdwah test\naafaefwfwfe\n" | rt -create | perl -nle 'print $1 if (/^Request (\d+) created$/);'`

rt -take id2

# ... TODO ...
