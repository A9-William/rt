<& /NoAuth/RTFM/Elements/Tabs, tabs => $tabs, subtabs => $subtabs, current_toptab => 'NoAuth/RTFM/index.html', current_subtab => $current_subtab, current_tab => $current_tab, Title => $Title&>
  
<%INIT>

my $subtabs;
$subtabs->{'a_search'} = { class     => "currentnav",
                        path      => "NoAuth/RTFM/Search.html",
                        title     => loc("New search"), 
                        separator => 1 };
if ($id) {
    $subtabs->{"this"} = { class          => "currentnav",
                        path           => "NoAuth/RTFM/Display.html?id=" . $id,
                        title          => "#" . $id,
                        current_subtab => $current_subtab };

    $subtabs->{"this"}->{subtabs} = {
                              Classes => {
                                  title => loc('Display'),
                                  path => 'NoAuth/RTFM/Display.html?id=' . $id,
                              },
                              History => {
                                  title => loc('History'),
                                  path => 'NoAuth/RTFM/History.html?id=' . $id,
                              },


 };

        my $art = RT::FM::Article->new( $session{'CurrentUser'} );
        $art->Load($id);
}
</%INIT>


<%ARGS>
$id => undef
$Title => undef
$tabs => undef
$current_tab => undef
$current_subtab => undef
</%ARGS>
