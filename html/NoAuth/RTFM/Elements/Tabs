<& /Elements/Header, Title => $Title &>
<& /Elements/PageLayout,
    current_toptab => 'NoAuth/RTFM/index.html',
    current_tab => $current_tab,
    current_subtab => $current_subtab,
    tabs => $tabs,
    toptabs => $toptabs,
    topactions => $topactions,
    actions => $actions,
    subactions => $subactions,
    title => $Title
&>
<%INIT>
my $action;
my $toptabs = { aaa => { title => loc('RTFM'),
                          path => 'NoAuth/RTFM/index.html' }};
my $tabs = { 'aab' => { title => loc('Overview'),
                           path  => 'NoAuth/RTFM/index.html' },
                'articles' => { title => loc('Search'),
                                path  => 'NoAuth/RTFM/Search.html' }, };


my $topactions = { B => { html => $m->scomp('/RTFM/Elements/GotoArticle') } };

# Now let callbacks add their extra tabs
$m->comp( '/Elements/Callback',
          topactions => $topactions,
          toptabs    => $toptabs,
          tabs    => $tabs,
          %ARGS );

foreach my $tab ( sort keys %{$tabs} ) {
    if ( $tabs->{$tab}->{'path'} eq $current_tab ) {
        $tabs->{$tab}->{"subtabs"}        = $subtabs;
        $tabs->{$tab}->{"current_subtab"} = $current_tab;
    }

}

</%INIT>
<%ARGS>
$current_toptab => 'NoAuth/RTFM/index.html'
$current_tab => undef
$current_subtab => undef
$actions => undef
$subtabs => undef
$subactions => undef
$Title => undef
</%ARGS>
