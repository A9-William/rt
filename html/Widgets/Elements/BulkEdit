% for my $type ( @$Types ) {
<& $Meta->{$type}{'Widget'},
    Default      => $Default,
    %{ $Meta->{$type}{'WidgetArguments'} },
    Name         => $type,
    exists $CurrentValue->{$type} ? ( CurrentValue => $CurrentValue->{$type} )
        : (),
    exists $DefaultValue->{$type} ? ( DefaultValue => $DefaultValue->{$type} )
        : (),
&>
% }

<%args>
$Types
$Meta
$Default => 0
$CurrentValue => {}
$DefaultValue => {}
</%args>
