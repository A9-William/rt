<&| /Widgets/TitleBox, title => loc('GnuPG public key for [_1]', $EmailAddress) &>
% if ( $res{'exit_code'} ) {
<% loc('No public key') %>
% } else {
<table>
<tr><th><% loc('User') %>:</th>   <td><% $res{'info'}{'User'} %></td></tr>
<tr><th><% loc('Trust') %>:</th>  <td><% loc( $res{'info'}{'Trust'} ) %></td></tr>
<tr><th><% loc('Created') %>:</th><td><% $res{'info'}{'Created'} %></td></tr>
<tr><th><% loc('Expire') %>:</th>  <td><% $res{'info'}{'Expire'} %></td></tr>
</table>
% }
</&>

<%ARGS>
$EmailAddress
</%ARGS>
<%INIT>
require RT::Crypt::GnuPG;
my %res = RT::Crypt::GnuPG::GetPublicKeyInfo( $EmailAddress );

</%INIT>
