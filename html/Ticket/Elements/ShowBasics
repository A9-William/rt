 <TABLE WIDTH="100%">
      <TR>
	<TD VALIGN=TOP WIDTH="20%">
	  <& /Elements/ShadedBox, title => loc('Id') , content => $Ticket->Id &>
	</TD>
	<TD VALIGN=TOP WIDTH="20%"> <& /Elements/ShadedBox, title => loc('Status') , content => loc($Ticket->Status) &>
	</TD>
	<TD VALIGN=TOP WIDTH="20%">
        <& /Elements/ShadedBox, title => loc('Worked') , content => loc('[_1] min', $TimeWorked) &>
	</TD>
	<TD VALIGN=TOP WIDTH="20%">
	  <& /Elements/ShadedBox, title => loc('Priority'), content=> $Ticket->Priority."/".$Ticket->FinalPriority &>
	</TD>
	<TD VALIGN=TOP WIDTH="20%">
	  <& /Elements/ShadedBox, title => loc('Queue'), content=> $Ticket->QueueObj->Name &>
	</TD>	


      </TR>
    </TABLE>
<%INIT>
my $TimeWorked = $Ticket->TimeWorked;
if ($Ticket->TimeLeft > 0 ) {
        $TimeWorked = $Ticket->TimeWorked."/".$Ticket->TimeLeft;
}
</%INIT>
<%ARGS>
$Ticket => undef
</%ARGS>
