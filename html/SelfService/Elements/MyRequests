<& /Elements/TitleBoxStart, title => loc("Your [_1] requests", $friendly_status) &>
<TABLE BORDER=0 cellspacing=1 cellpadding=1 BGCOLOR="#eeeeee" WIDTH=100%>
<TR>
<TH><&|/l&>Subject</&></TH>
<TH><&|/l&>Status</&></TH>
<TH><&|/l&>Owner</&></TH>
<TH>&nbsp;</TH>
</TR>
<TR>
% while (my $Ticket = $MyTickets->Next) {
<TR>
<TD>
<%$Ticket->Id%>: <%$Ticket->Subject%>
</TD>
<TD>
<%$Ticket->Status%>
</TD><TD>
<%$Ticket->OwnerObj->Name%>
</TD><TD ALIGN=RIGHT>
[<A HREF="<% $RT::WebPath %>/SelfService/Display.html?id=<%$Ticket->Id%>"><&|/l&>Details</&></A>]
</TD>
</TR>
% }
</TABLE>
<& /Elements/TitleBoxEnd &>


<%INIT>
my $MyTickets;
$MyTickets = new RT::Tickets ($session{'CurrentUser'});
$MyTickets->LimitRequestor(VALUE => $session{'CurrentUser'}->EmailAddress);

foreach my $status (@status) {

        $MyTickets->LimitStatus(VALUE => $status);
}
</%INIT>
<%ARGS>
$friendly_status => 'open'
@status => ('open', 'new', 'stalled')
</%ARGS>
