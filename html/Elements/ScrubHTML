<%init>
my $scrubber = HTML::Scrubber->new();

$scrubber->default( 0,
    { '*' => 0, id => 1, class => 1, href => 1, face => 1, size => 1, target => 1 } );

$scrubber->deny(qw[*]);
$scrubber->allow( qw[A B U P BR I HR BR SMALL EM FONT SPAN DIV] );
$scrubber->comment(0);
return($scrubber->scrub($Content));
</%init>
<%args>
$Content => undef
</%args>
