<%init>
$Page = $m->callers(1)->path unless ($Page);
my $path = '/Callbacks/' . $Page . '/' . $_CallbackName . '/*';
my @callbacks = $m->interp->resolver->glob_path($path);
# TODO: memoize these callbacks, so we don't have a big perf hit
foreach my $comp (@callbacks) {
        next if ($comp =~ /~$/); #skip backup files
        $m->comp($comp, %ARGS);
}
return(1);
</%init>
<%args>
$_CallbackName => 'Default'
$Page => undef
</%args>
