<UL>
% while (my $article = $articles->Next()) {
<LI><a href="article.html?id=<%$article->Id%>"><% $article->Summary %></a>&nbsp;&nbsp;&nbsp&nbsp;
	 <a href="manage/edit_article.html?id=<%$article->Id%>">[edit]</a>
	 <a href="manage/create_article.html?Parent=<%$article->Id%>">[new child]</a>
</LI>
% if ($Depth > 0) {
<& ArticleHierarchy, parent => $article->Id , Depth => $Depth &> 
% }
% }
</UL>
<%INIT>
# Subtract 1 from depth. by default, depth 0, means unlimited.
$Depth--;
my $articles = new RT::FM::ArticleCollection($session{'CurrentUser'});
$articles->LimitToParent($parent);
</%INIT>
<%ARGS>
$parent => 0
$Depth => 0
</%ARGS>
