%# $Header: /raid/cvsroot/rt/webrt/Elements/SelectResultsPerPage,v 1.2 2001/11/06 23:06:58 jesse Exp $

%# TODO: Better default handling

<SELECT NAME ="<%$Name%>">
% foreach my $value (@values) {
<OPTION VALUE="<%$value%>" <% $value == $Default && 'SELECTED' %>>
<% shift @labels %>
</OPTION>
% }
</SELECT>

<%INIT>
my @values = qw(0 10 25 50 100);
my @labels = (loc('Unlimited'), qw(10 25 50 100));
</%INIT>
<%ARGS>

$Name => undef
$Default => 50

</%ARGS>
