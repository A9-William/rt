<SELECT NAME="<%$Name%>">
%foreach my $order (@orders) {
<OPTION VALUE="<%$order%>" <%$order eq $Default && 'SELECTED' %>>
<% shift @order_names %>
</OPTION>
% }
</SELECT>

<%INIT>
my @orders = qw (ASC DESC);
my @order_names = (loc('Ascending'), loc('Descending'));

</%INIT>

<%ARGS>
$Name => 'SortOrder'
$Default => 'ASC'
</%ARGS>
